{
    "manifest_version": 3,
    "name": "Easy Screen Recording",
    "description": "A basic free screen recording extension for Chrome",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/images/multimedia.png"
    },
    "permissions": [
        "desktopCapture",
        "tabs",
        "activeTab",
        "scripting",
        "windows"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "assets/js/background.js"
    }
}